    "/jobs/{jobID}/results" : {
      "get" : {
        "description" : "retrieve the result(s) of a specific job",
        "operationId" : "getResult",
        "tags" : [ "Result" ],
        "parameters" : [ {
          "in" : "path",
          "name" : "jobID",
          "schema" : {
            "type" : "integer"
          },
          "required" : true,
